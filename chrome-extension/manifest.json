{
  "manifest_version": 3,
  "name": "Fireworks - Gradescope Large File Viewer",
  "version": "1.0.0",
  "description": "Preview and work with large Jupyter notebooks on Gradescope without downloading. Chrome extension for debugging/development use.",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "*://gradescope.com/*",
    "*://*.gradescope.com/*",
    "*://production-gradescope-uploads.s3-us-west-2.amazonaws.com/*",
    "*://*.s3.amazonaws.com/*",
    "*://*.s3-us-west-2.amazonaws.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://gradescope.com/*",
        "*://*.gradescope.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  
  "action": {
    "default_title": "Fireworks - Gradescope Viewer"
  }
}

